{
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Executar testes behave",
            "type": "python",
            "request": "launch",
            "module": "behave",
            "console": "integratedTerminal",
            "args": [
                "--no-capture",
                "--no-capture-stderr",
                "--no-skipped",
                "${file}"
            ],
            "env": {
                "WORKSPACE_DIR": "/Volumes/dev/t8s"
            }
        }
    ]
}
